extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/orders.css")

block content
    main
        if orders.length > 0
            ul.orders
                each order in orders
                    li.orders__item
                        h3 Order - # #{order._id}
                        ul.orders__products
                            each item in order.items
                                li.orders__products-item #{item.product.title} (#{item.quantity})